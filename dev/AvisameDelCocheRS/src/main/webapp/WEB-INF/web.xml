<?xml version="1.0" encoding="UTF-8"?> 

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <!-- Servlet REST -->
    <servlet>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
     <!-- FIN Servlet REST -->

	<!-- SecurizaciÃ³n -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>CocheRS</web-resource-name>
			<url-pattern>/resources/componentes/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>Admin</role-name>
		</auth-constraint>
	</security-constraint>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>CocheRS</web-resource-name>
			<url-pattern>/resources/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>User</role-name>
			<role-name>Admin</role-name>
		</auth-constraint>
	</security-constraint>

	<login-config>
		<auth-method>BASIC</auth-method>
		<realm-name>file</realm-name>
		<!-- <form-login-config> <form-login-page>/login.xhtml</form-login-page> 
			<form-error-page>/error.xhtml</form-error-page> </form-login-config> -->
	</login-config>

	<!-- Capturador de excepciones generico -->
	<context-param>
		<param-name>exception.providers</param-name>
		<param-value>com.carlos.avisamedelcoche.rs.filters.ExceptionHandler</param-value>
	</context-param>
     
    
</web-app>
